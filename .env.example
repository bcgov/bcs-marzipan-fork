# Database Configuration
# PostgreSQL connection string (required)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Database Connection Pool Settings (optional)
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=20
DB_CONNECT_TIMEOUT=10

# API Configuration
# API authentication key (optional in development, required in production)
# If not set, all requests are allowed in development mode
API_KEY=your-api-key-here

# Service Port
# Backend service port (optional, defaults to 3001)
PORT=3001

# Frontend Configuration
# Frontend API base URL (optional, defaults to http://localhost:3001)
# Used by Vite during build and runtime
VITE_API_BASE_URL=http://localhost:3001
