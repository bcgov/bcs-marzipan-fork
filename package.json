{
  "name": "corporate-calendar",
  "workspaces": [
    "calendar-ui",
    "calendar-service",
    "packages/database",
    "packages/shared"
  ],
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.0.0"
  },
  "overrides": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "@fluentui/react": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0"
    },
    "@fluentui/react-components": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0"
    },
    "@fluentui/foundation-legacy": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0"
    },
    "drizzle-orm": "^0.44.7"
  },
  "scripts": {
    "start": "concurrently \"npm --prefix calendar-ui run dev\" \"npm --prefix calendar-service run start:dev\"",
    "start:prod": "concurrently \"npm --prefix calendar-ui run preview\" \"npm --prefix calendar-service run start:prod\"",
    "install-all": "npm install --workspaces",
    "build": "npm run build:packages && npm run build --workspace=calendar-service && npm run build --workspace=calendar-ui",
    "build:packages": "npm run build --workspace=packages/database && npm run build --workspace=packages/shared",
    "typecheck": "npm run typecheck --workspaces",
    "typecheck:packages": "npm run typecheck --workspace=packages/database && npm run typecheck --workspace=packages/shared",
    "test:env": "ts-node -r tsconfig-paths/register scripts/test-env-vars.ts",
    "test:config": "ts-node -r tsconfig-paths/register scripts/test-nestjs-config.ts",
    "prepare": "husky",
    "format": "prettier --write \"calendar-service/**/*.{ts,json}\" \"calendar-ui/**/*.{ts,tsx,json}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"calendar-service/**/*.{ts,json}\" \"calendar-ui/**/*.{ts,tsx,json}\" \"*.{json,md}\"",
    "lint": "eslint \"calendar-service/**/*.ts\" \"calendar-ui/**/*.{ts,tsx}\" --fix",
    "lint:check": "eslint \"calendar-service/**/*.ts\" \"calendar-ui/**/*.{ts,tsx}\"",
    "lint:service": "eslint \"calendar-service/**/*.ts\" --fix",
    "lint:ui": "eslint \"calendar-ui/**/*.{ts,tsx}\" --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@eslint/json": "^0.14.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.20.0"
  }
}
